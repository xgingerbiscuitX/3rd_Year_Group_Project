<Window x:Class="SoftwareEngineeringT1.QRReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftwareEngineeringT1"
        mc:Ignorable="d"
        Title="QRReader" Height="450" Width="800">
    <Grid Background="#3030FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="390*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <ComboBox HorizontalAlignment="Left" Name="Devices" Margin="130,22,0,0" VerticalAlignment="Top" Width="305"/>
        <Label Content="Camera" HorizontalAlignment="Left" Margin="70,25,0,0" VerticalAlignment="Top"/>
        <WindowsFormsHost Name="CameraWindow" HorizontalAlignment="Left" Height="300" Margin="75,80,0,0" VerticalAlignment="Top" Width="360">

        </WindowsFormsHost>
        
        <TextBox HorizontalAlignment="Left" FontSize="18" Name="QRResult" Height="295" Margin="485,85,0,0" TextWrapping="Wrap" Text="Please scan the QR code given by the customer" VerticalAlignment="Top" TextAlignment="Center" Width="230"/>


    </Grid>
</Window>
