        <Button x:Name="Yes" Width="100" Height="40" FontFamily="Myriad Pro" FontSize="14"
                    Content="Yes" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="1" Margin="129,291,363,88" IsDefault="True" Click="Yes_Click" 
                    />
        <Button x:Name="No"  Width="100" Height="40" FontFamily="Myriad Pro" FontSize="14"
                    Content="No" HorizontalAlignment="Center" VerticalAlignment="Center"   Padding="1" Margin="363,291,129,88" IsDefault="True" Click="No_Click" 
                    />
