        <Label Content="Home Phone:" Foreground="White" HorizontalAlignment="Left" Margin="356,143,0,0" VerticalAlignment="Top"/>
        <Label Content="Next To Kin:" Foreground="White" HorizontalAlignment="Left" Margin="356,200,0,0" VerticalAlignment="Top"/>
        <Label Content="NTK PhoneNo:" Foreground="White" HorizontalAlignment="Left" Margin="356,229,0,0" VerticalAlignment="Top"/>
        <Label Content="NTK Relationship:" Foreground="White" HorizontalAlignment="Left" Margin="356,255,0,0" VerticalAlignment="Top"/>

        <TextBlock x:Name="stNo" HorizontalAlignment="Left" Margin="185,85,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="fname" HorizontalAlignment="Left" Margin="185,114,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="lname" HorizontalAlignment="Left" Margin="185,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="Address" HorizontalAlignment="Left" Margin="185,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="Email" HorizontalAlignment="Left" Margin="185,201,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="MobPhone" HorizontalAlignment="Left" Margin="185,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="ppsn" HorizontalAlignment="Left" Margin="185,259,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
       <TextBlock x:Name="EType" HorizontalAlignment="Left" Margin="488,89,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="EUser" HorizontalAlignment="Left" Margin="488,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="HPhone" HorizontalAlignment="Left" Margin="488,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="NTK" HorizontalAlignment="Left" Margin="488,205,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
