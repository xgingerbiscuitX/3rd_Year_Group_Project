        <Label Content="First Name:" Foreground="White" HorizontalAlignment="Left" Margin="48,110,0,0" VerticalAlignment="Top"/>
        <Label Content="Last Name:" Foreground="White" HorizontalAlignment="Left" Margin="48,139,0,0" VerticalAlignment="Top"/>
        <Label Content="Address:" Foreground="White" HorizontalAlignment="Left" Margin="48,168,0,0" VerticalAlignment="Top"/>
        <Label Content="Email:" Foreground="White" HorizontalAlignment="Left" Margin="48,197,0,0" VerticalAlignment="Top"/>
       
